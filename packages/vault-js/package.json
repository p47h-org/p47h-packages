{
  "name": "@p47h/vault-js",
  "version": "0.10.1",
  "p47h": {
    "coreVersion": "0.10.1"
  },
  "description": "Secure, local-first cryptographic storage for browser environments. Argon2id + XChaCha20Poly1305 + Ed25519 backed by WASM.",
  "keywords": [
    "security",
    "encryption",
    "wasm",
    "vault",
    "indexeddb",
    "ed25519",
    "argon2",
    "privacy",
    "local-first"
  ],
  "author": "P47H Team <support@p47h.com>",
  "license": "Apache-2.0",
  "homepage": "https://p47h.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p47h-org/p47h-packages.git",
    "directory": "packages/vault-js"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js"
    },
    "./plugins/vite": {
      "types": "./dist/plugins/vite.d.ts",
      "import": "./dist/plugins/vite.js"
    },
    "./plugins/webpack": {
      "types": "./dist/plugins/webpack.d.ts",
      "import": "./dist/plugins/webpack.js"
    },
    "./wasm": "./wasm/p47h_wasm_core_bg.wasm",
    "./wasm-inline": {
      "types": "./dist/wasm-inline.d.ts",
      "import": "./dist/wasm-inline.js"
    }
  },
  "files": [
    "dist",
    "plugins",
    "wasm",
    "scripts/postinstall.js",
    "scripts/build-inline-wasm.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && npm run build:plugins",
    "build:plugins": "tsc -p tsconfig.plugins.json",
    "build:inline": "tsx scripts/build-inline-wasm.ts",
    "build:inline:cjs": "tsx scripts/build-inline-wasm.ts -f cjs -o dist/wasm-inline.cjs",
    "build:inline:iife": "tsx scripts/build-inline-wasm.ts -f iife -o dist/wasm-inline.iife.js",
    "test": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/**/*.test.ts",
    "test:coverage": "c8 --reporter=lcov --reporter=text tsx --test tests/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "postinstall": "node scripts/postinstall.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/webpack": "^5.28.5",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "c8": "^10.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "vite": "^7.3.0"
  },
  "peerDependencies": {
    "vite": ">=4.0.0",
    "webpack": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
